{% block title %}Viewing image{% endblock %}

{% block content %}
    <figure id="{# {{ img.id }} #}">
        <img src="/assets/img/default_portrait.png{# /img/{{ img.filename }} #}" alt="Titol{# {{ img.title }}#}" width="400" height="300">
        <figcaption>
            <a href="{#link_al_user_profile#}">User{# {{ user.name }}#}</a>
            <span class="likes">0{# {{ img.likes }}#}</span><span class="visits">0{# {{ img.visits }} #}</span>
            <a href="{#link_a_la_imatge#}">Titol{# {{ img.title }}#}</a> <span class="date">Uploaded 0{# {{ img.days }} #} days ago</span>
            {% if user is defined %}
                <a href="{# /{{ img.id }}/like #}">Like</a>
                <form method="post" action="/{# {{ img.id }}/ #}comment">
                    <input type="text" name="user" placeholder="Comment">
                    <input type="submit" name="edit" value="Comment">
                </form>
            {% endif %}
            <div class="comment"> <a href="{# /user/{{ user.id }} #}">Name{# {{ user.name }} #}</a><span>Hey cool photo</span></div>
            <div class="comment"> <a href="{# /user/{{ user.id }} #}">Name{# {{ user.name }} #}</a><span>Hey cool photo</span></div>
            <div class="comment"> <a href="{# /user/{{ user.id }} #}">Name{# {{ user.name }} #}</a><span>Hey cool photo</span></div>
            <a href="{# more images #}">Load more comments</a>
        </figcaption>
    </figure>

{% endblock %}