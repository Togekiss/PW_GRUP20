{% extends "base.twig" %}


{# PAGINA PER VEURE LES TEVES NOTIFICACIONS #}

{% block title %}{{ user.username }}'s notifications{% endblock %}

{% block content %}

    <h1 class="title text-center">{{ user.username }}'s notifications</h1>

    <ul class="comment-list list-unstyled">

        {% for notification in notifications %}
            <li>
                {% if notification.is_like %}
                <p>User <a href="/user/{{ notification.user_id }}/1">{{ notification.username }}</a> has liked your
                    image <a href="/image/{{ notification.image_id }}">{{ notification.title }}</a>!</p>
                {% else %}
                <p>User <a href="/user/{{ notification.user_id }}/1">{{ notification.username }}</a> has commented your
                    image <a href="/image/{{ notification.image_id }}">{{ notification.title }}</a>!</p>
                {% endif %}
                <button type="button" class="btn btn-sm btn-outline-secondary boto-raro">
                    <a href="/remove-notification/{{ notification.id }}">Already noticed</a>
                </button>
            </li>
        {% endfor %}

    </ul>


{% endblock %}