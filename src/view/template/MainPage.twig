{% block content %}
    <h1 class="text-center">Welcome to PWGram</h1>

    <h2>Most viewed images</h2>
    <ul id="top-list" class="img-list list-unstyled">
        <div class="row">
            {#{% for img in most_viewed_images %}#}
                {% for i in 0..4 %}
                <li class="col-md-6 col-lg-4">
                    <figure id="{{ img.id }}">
                        <img src="/assets/img/default_portrait.png{# /img/{{ img.filename }} #}" alt="{{ img.title }}" width="400" height="300">
                        <figcaption>
                            <a href="/user/{{ user2.id }}">{{ user2.username }}</a>
                            <span class="likes">{{ img.likes }}</span><span class="visits">{{ img.visits }}</span>
                            <a href="/image/{{ img.id }}">{{ img.title }}</a> <span class="date">{{ img.created_at }}</span>
                            {% if user is defined %}
                                <a href="/like/{{ img.id }}">Like</a>
                                <form method="post" action="/comment/{{ img.id }}">
                                    <div class="form-group comment">
                                        <input type="text" name="text" placeholder="Comment" required>
                                    </div> <input type="submit" name="edit" value="Comment">
                                </form>
                            {% endif %}
                        </figcaption>
                    </figure>
                </li>
            {% endfor %}
        </div>
    </ul>

    <h2>Recent images</h2>

    <ul class="img-list list-unstyled" id="recent-list">
        <div class="row">
            {#{% for img in most_recent_images %}#}
            {% for i in 0..4 %}
            <li class="col-md-6 col-lg-4">
                <figure id="{# {{ img.id }} #}">
                    <img src="/assets/img/default_portrait.png{# /img/{{ img.filename }} #}" alt="Titol{# {{ img.title }}#}" width="400" height="300">
                    <figcaption>
                        <a href="{#link_al_user_profile#}">User{# {{ user.name }}#}</a>
                        <span class="likes">0{# {{ img.likes }}#}</span><span class="visits">0{# {{ img.visits }} #}</span>
                        <a href="{#link_a_la_imatge#}">Titol{# {{ img.title }}#}</a> <span class="date">1/1/1{# {{ img.date }} #}</span>
                        <div class="comment"> <a href="{# /user/{{ user.id }} #}">Name{# {{ user.name }} #}</a><span>Hey cool photo</span></div>
                        {% if user is defined %}
                            <a href="{# /{{ img.id }}/like #}">Like</a>
                            <form method="post" action="/comment/{{ img.id }}">
                                <div class="form-group comment">
                                    <input type="text" name="text" placeholder="Comment" required>
                                </div> <input type="submit" name="edit" value="Comment">
                            </form>
                        {% endif %}
                    </figcaption>
                </figure>
            </li>
            {% endfor %}

        </div>
    </ul>

    <a href="{# more images #}">Load more images</a>
    <br><br><br><br><br>

{% endblock %}


